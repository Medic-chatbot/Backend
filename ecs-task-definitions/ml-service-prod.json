{
  "family": "medic-ml-service-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["EC2"],
  "cpu": "3584",
  "memory": "14336",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskRole",
  "placementConstraints": [
    {
      "type": "memberOf",
      "expression": "attribute:environment == prod"
    }
  ],
  "containerDefinitions": [
    {
      "name": "medic-ml-container-prod",
      "image": "${ECR_ML_SERVICE}:prod",
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/medic-ml-prod",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "prod"
        },
        {
          "name": "MODEL_NAME",
          "value": "monologg/kobert"
        },
        {
          "name": "DEVICE",
          "value": "cuda"
        },
        {
          "name": "PYTORCH_CUDA_ALLOC_CONF",
          "value": "max_split_size_mb:512"
        }
      ],
      "resourceRequirements": [
        {
          "type": "GPU",
          "value": "1"
        }
      ]
    }
  ]
}
