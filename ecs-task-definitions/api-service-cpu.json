{
  "family": "medic-api-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::832362089079:role/medic-gpu-cluster-task-execution-role",
  "taskRoleArn": "arn:aws:iam::832362089079:role/medic-gpu-cluster-task-role",
  "containerDefinitions": [
    {
      "name": "medic-api-container",
      "image": "${ECR_API_SERVICE}:${IMAGE_TAG}",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "memory": 1536,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/medic-api",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "DB_HOST",
          "value": "${DB_HOST}"
        },
        {
          "name": "SYMPTOM_HISTORY_UTTERANCES",
          "value": "${SYMPTOM_HISTORY_UTTERANCES}"
        },
        {
          "name": "RECOMMEND_CONFIDENCE_THRESHOLD",
          "value": "${RECOMMEND_CONFIDENCE_THRESHOLD}"
        },
        {
          "name": "RECOMMEND_LIMIT",
          "value": "${RECOMMEND_LIMIT}"
        },
        {
          "name": "DB_PORT",
          "value": "${DB_PORT}"
        },
        {
          "name": "DB_NAME",
          "value": "${DB_NAME}"
        },
        {
          "name": "DB_USER",
          "value": "${DB_USER}"
        },
        {
          "name": "DB_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "name": "ML_SERVICE_URL",
          "value": "https://medic.yoon.today/ml"
        },
        {
          "name": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        },
        {
          "name": "ACCESS_TOKEN_EXPIRE_MINUTES",
          "value": "${ACCESS_TOKEN_EXPIRE_MINUTES}"
        },
        {
          "name": "DEBUG",
          "value": "${DEBUG}"
        },
        {
          "name": "ALLOWED_HOSTS_STRING",
          "value": "${ALLOWED_HOSTS_STRING}"
        },
        {
          "name": "KAKAO_REST_API_KEY",
          "value": "${KAKAO_REST_API_KEY}"
        }
      ],
      "mountPoints": [],
      "volumesFrom": []
    }
  ],
  "volumes": []
}
